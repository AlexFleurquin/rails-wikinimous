<div class="Navbar d-flex justify-content-between p-5 m-5 bg-light rounded-2">
  <h1>Wikinimous</h1>
  <button type="button" class="btn btn-dark rounded-4"><%= link_to "New article", new_article_path(@article) %></button>
</div>

<div class="container">
  <div class="row">
    <h2 class="col-sm-10"><%= @article.title %></h2>
    <div class="col-sm-2">
      <p class="btn btn-primary p-2"><%= link_to "Edit", edit_article_path(@article) %></p>
      <p class="btn btn-secondary p-2"><%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
    </div>
  </div>
  <p><%= @article.content %></p>
</div>
